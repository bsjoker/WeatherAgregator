<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash">

    <TextView
        android:id="@+id/tvHeadPolicity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:paddingTop="12dp"
        android:background="#55ffffff"
        android:text="@string/policity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#e93c4d"
        android:textAlignment="center"
        android:layout_weight="0.93"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPolicity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:background="#55ffffff"
        android:textColor="#1e1e57"
        android:text="@string/textPolicity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeadPolicity" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickAgree"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="@string/agree"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_agree" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickClose"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="@string/close"
            android:background="@drawable/button_close" />
    </LinearLayout>
</LinearLayout>